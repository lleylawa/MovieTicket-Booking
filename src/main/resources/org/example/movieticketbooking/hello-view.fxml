<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.movieticketbooking.HelloController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
    <Label text="Movie Ticket Booking" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ComboBox fx:id="movieDropdown" promptText="Select Movie" />

    <TextField fx:id="userNameField" promptText="Enter your name" />

    <TextField fx:id="ticketCountField" promptText="Enter number of tickets" />

    <Button text="Book Now" onAction="#handleBookNow" />

    <Label fx:id="notificationLabel" style="-fx-text-fill: red;" />
</VBox>
